package httpserver.server;

/**
 * Encapsula informações de uma requisicao.
 * @author Ferreira
 */
class RequisicaoSocket {
    private final String mensagem;
    private final int id;
    private final String ip;
    private final int porta;
    
    /**
     * Cria um objeto de requisicao do cliente, contendo informações da requisicao.
     * 
     * @param id O id da thread do cliente
     * @param mensagem a mensagem de requisicao
     * @param ip O endereco ip do cliente
     * @param porta a porta da conexao
     */
    public RequisicaoSocket(int id, String mensagem, String ip, int porta)
    {
        this.id = id;
        this.mensagem = mensagem;
        this.ip = ip;
        this.porta = porta;
    }

    /**
     * @return the mensagem
     */
    public String getMensagemRequisicao() {
        return mensagem;
    }

    /**
     * @return the id
     */
    public int getId() {
        return id;
    }

    /**
     * @return the ip
     */
    public String getEnderecoIP() {
        return ip;
    }

    /**
     * @return the porta
     */
    public int getPorta() {
        return porta;
    }
    
    
}
